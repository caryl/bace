<%= form.error_messages %>

<dl>
  <dt><%= form.label :name, meta_name(:name) %></dt>
  <dd><%= form.text_field :name %></dd>
  <dt><%= form.label :permission_id, meta_name(:permission_id) %></dt>
  <dd><%= form.select :permission_id, nested_set_options(Permission){|i| "#{'-' * i.level} #{i.name}"} %></dd>
  <dt><%= form.label :parent_id, meta_name(:parent_id) %></dt>
  <dd><%= form.select :parent_id, nested_set_options(Menu, @menu){|i| "#{'-' * i.level} #{i.name}"}, :include_blank => true %></dd>
  <dt><%= form.label :icon, meta_name(:icon) %></dt>
  <dd><%= form.text_field :icon %></dd>
  <dt><%= form.label :url, meta_name(:url) %></dt>
  <dd><%= form.text_field :url %></dd>
  <dt><%= form.label :remark, meta_name(:remark) %></dt>
  <dd><%= form.text_field :remark %></dd>
</dl>
